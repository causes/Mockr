<div class="clearfix" id="header">
  <h1><%= link_to image_tag("logo-new.png"), "/", :id => "logo" %></h1>
  <ul class="mock_nav">
    <li>
      <% if @mock.prev %>
        <%= link_to "Prev", mock_path(@mock.prev), :id => "prev_link" %>
      <% else %>
        <%= link_to_function "Prev", :class => "none" %>
      <% end %>
    </li>
    <li class="next">
      <% if @mock.next %>
        <%= link_to "Next", mock_path(@mock.next), :id => "next_link" %>
      <% else %>
        <%= link_to_function "Next", "", :class => "none" %>
      <% end %>
    </li>
  </ul>
  <ul class="mock_actions">
    <li>
      <%= link_to "Download", image_path(@mock.image.url),
        :class => "button" %>
    </li>
    <li>
      <%= link_to "Add Next Version",
        new_mock_path(:mock_list_id => @mock.mock_list_id),
        :class => "button add_mock_link" %>
    </li>
    <li>
      <%= link_to "Delete", mock_path, :method => :delete,
        :confirm => "Are you sure you want to delete this mock?" %>
    </li>
    <li>
      <%= link_to "Latest", latest_mock_list_path(@mock.mock_list),
        :class => "button" %>
    </li>
  </ul>
  <h2>
    <%= link_to @mock.project.title, project_path(@mock.project) %>
    <span class="mock_title">
      <%= @mock.title %>
    </span>
  </h2>
</div>
